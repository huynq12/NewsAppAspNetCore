@using NewsApp.ViewModels;
@model ImageDto

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UploadImage</title>
</head>
<body>

    <h4>Image</h4>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Create" method="post" enctype="multipart/form-data">

                <div class="form-group">
                    <label asp-for="ImageDescription" class="control-label"></label>
                    <input asp-for="ImageDescription" class="form-control" />
                    <span asp-validation-for="ImageDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MyImage" class="control-label"></label>
                    <input asp-for="MyImage" class="form-control" />
                    <span asp-validation-for="MyImage" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="form-label">ImageCategory</label>
                    @Html.ListBoxFor(model => model.ImgCategoryIds,
                    new MultiSelectList(Model.SelectListImgCats,"Value","Text"),
                    new {@class="form-control",multiple="multiple",id="ImgCategories_dropdown"})

                </div>
                <button type="submit" class="btn btn-info mt-2">Submit</button>
            </form>
        </div>
    </div>

    <div>
        <a class="btn btn-danger mt-2" asp-action="Index">Cancel</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
        <script>
            $(document).ready(function () {
                $('#ImgCategories_dropdown').multiselect();
            });
        </script>
    }
</body>
</html>
