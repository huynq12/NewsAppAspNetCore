@using NewsApp.Enums;
@using NewsApp.ViewModels.Seedwork;
@model PagedList<Image>

@{
    var filter = ViewBag.Filter;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<style>
    .image-container {
        position: relative;
        display: inline-block;
    }

    .image-description {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        background-color: rgba(0, 0, 0, 0.7);
        color: #fff;
        padding: 5px;
        font-size: 14px;
        display: none;
    }

    .image-container:hover .image-description {
        display: block;
    }
</style>




<body>
    <form asp-action="Index">
        @Html.DropDownList("CategoryIds",new SelectList(filter.SelectListCats,"Value","Text"),"--Select--")
       
        @Html.DropDownList("FilterOrder",Html.GetEnumSelectList<FilterOrder>(),"Sort")
      
        <button class="btn btn-primary" type="submit">Search</button>

    </form>
<table class="table">
    <thead>
        <tr>
            <th>
                
            </th>
           
            <th>
                Image Description
            </th>
            <th>
                Upload Time
            </th>
            <th>
                 <a class="btn btn-success" onclick="showInPopup('@Url.Action("Create","Image",null,Context.Request.Scheme)','Upload an image')">Upload new image</a>

            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Items) {
        <tr>
            <td>
                <div class="image-container">
                    <img class="imageTarget" src="~/images/@item.MyImage" alt="@item.ImageDescription" />
                            <div class="image-description">
                                @item.ImageSize
                                <br/>
                                @item.ImageDescription

                            </div> 
                </div>
            </td>  
            
            <td>
                @Html.DisplayFor(modelItem => item.ImageDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UploadTime)
            </td>
            <td>
                @*<a class="btn btn-info" onclick="showInPopup('@Url.Action("Edit","Image",new{id=item.Id},Context.Request.Scheme)','Edit image')">Edit</a> |*@
                <a class="btn btn-warning" onclick="showInPopup('@Url.Action("Details","Image",new{id=item.Id},Context.Request.Scheme)','Details')">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
    <div class="container">
        @if (Model.TotalPages > 0)
        {
            <ul class="pagination justify-content-end">
                @if (Model.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-pg="1"
                        asp-route-FilterOrder="@filter.FilterOrder">First</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-pg="@(Model.CurrentPage-1)" asp-route-FilterOrder="@filter.FilterOrder">Previous</a>
                    </li>
                }
                @for (var pge = Model.StartPage; pge <= Model.EndPage; pge++)
                {
                    <li class="page-item" @(pge == Model.CurrentPage ? "active" : "")>
                        <a class="page-link" asp-action="Index" asp-route-pg="@pge" asp-route-FilterOrder="@filter.FilterOrder">@pge</a>
                    </li>
                }
                @if (Model.CurrentPage < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-pg="@(Model.CurrentPage+1)" asp-route-FilterOrder="@filter.FilterOrder">Next</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-pg="@(Model.TotalPages)" asp-route-FilterOrder="@filter.FilterOrder">Last</a>
                    </li>
                }
            </ul>
        }
    </div>
</body>
</html>
